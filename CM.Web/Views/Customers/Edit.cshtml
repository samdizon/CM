@model CM.Web.Models.CustomerDepartmentViewModel;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />
            <div class="form-group">
                <label asp-for="Customer.FirstName" class="control-label"></label>
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.LastName" class="control-label"></label>
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Gender" class="control-label"></label>
                <select asp-for="Customer.Gender" class="form-control" asp-items="Html.GetEnumSelectList<CM.Core.Enums.Gender>()"></select>
                <span asp-validation-for="Customer.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.DepartmentId" class="control-label"></label>
                <select asp-for="Customer.DepartmentId" class="form-control" asp-items='new SelectList(@Model.Departments, "Id", "Name" )'></select>
                <span asp-validation-for="Customer.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
